<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Planning - Venue ERP Internal</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="css/internal.css">
</head>
<body>

  <div class="panel-layout">
    <div id="sidebarContainer"></div>

    <main class="main-content">
      <div id="headerContainer"></div>

      <div class="page-content">
        <div class="container-fluid">

          <!-- Stats Widgets -->
          <div class="widget-grid">
            <div class="stat-widget">
              <div class="stat-icon primary">
                <i class="fas fa-calendar-day"></i>
              </div>
              <div class="stat-content">
                <div class="stat-label">Events Today</div>
                <div class="stat-value">4</div>
                <div class="stat-change positive">
                  <i class="fas fa-arrow-up"></i> 2 in progress
                </div>
              </div>
            </div>
            <div class="stat-widget">
              <div class="stat-icon warning">
                <i class="fas fa-tasks"></i>
              </div>
              <div class="stat-content">
                <div class="stat-label">Pending Tasks</div>
                <div class="stat-value">18</div>
                <div class="stat-change negative">
                  <i class="fas fa-arrow-down"></i> 6 high priority
                </div>
              </div>
            </div>
            <div class="stat-widget">
              <div class="stat-icon success">
                <i class="fas fa-chart-pie"></i>
              </div>
              <div class="stat-content">
                <div class="stat-label">Resource Utilization</div>
                <div class="stat-value">76%</div>
                <div class="stat-change positive">
                  <i class="fas fa-arrow-up"></i> Good utilization
                </div>
              </div>
            </div>
            <div class="stat-widget">
              <div class="stat-icon danger">
                <i class="fas fa-exclamation-triangle"></i>
              </div>
              <div class="stat-content">
                <div class="stat-label">Active Incidents</div>
                <div class="stat-value">2</div>
                <div class="stat-change negative">
                  <i class="fas fa-arrow-up"></i> 1 critical
                </div>
              </div>
            </div>
          </div>

          <!-- Events Table -->
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Event Planning (15)</h3>
              <div style="display: flex; gap: 0.75rem;">
                <button class="btn btn-sm btn-primary" onclick="openModal('newEventPlanModal')">
                  <i class="fas fa-plus"></i> Create Event Plan
                </button>
              </div>
            </div>
            <div class="card-body" style="padding: 0;">
              <table class="data-table">
                <thead>
                  <tr>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Venue</th>
                    <th>Tasks</th>
                    <th>Resources</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Wedding - Smith</td>
                    <td>Dec 20, 2024</td>
                    <td>Grand Ballroom</td>
                    <td><span class="badge badge-info">12/20 Completed</span></td>
                    <td><span class="badge badge-success">Allocated</span></td>
                    <td><span class="badge badge-warning">In Progress</span></td>
                    <td>
                      <div class="table-actions">
                        <button class="btn-icon" title="View Plan"><i class="fas fa-eye"></i></button>
                        <button class="btn-icon" title="Edit"><i class="fas fa-edit"></i></button>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>Conference - Tech Corp</td>
                    <td>Dec 22, 2024</td>
                    <td>Conference Hall</td>
                    <td><span class="badge badge-info">5/15 Completed</span></td>
                    <td><span class="badge badge-warning">Pending</span></td>
                    <td><span class="badge badge-info">Planning</span></td>
                    <td>
                      <div class="table-actions">
                        <button class="btn-icon" title="View Plan"><i class="fas fa-eye"></i></button>
                        <button class="btn-icon" title="Edit"><i class="fas fa-edit"></i></button>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
    </main>
  </div>

  <!-- New Event Plan Modal -->
  <div id="newEventPlanModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Create Event Plan</h2>
        <button class="modal-close" onclick="closeModal('newEventPlanModal')">&times;</button>
      </div>
      <div class="modal-body">
        <form id="newEventPlanForm">
          <div class="grid grid-2">
            <div class="form-group">
              <label class="form-label">Event *</label>
              <select class="form-control" required>
                <option value="">Select Event</option>
                <option>Wedding - Smith</option>
                <option>Conference - Tech Corp</option>
              </select>
            </div>
            <div class="form-group">
              <label class="form-label">Event Manager *</label>
              <select class="form-control" required>
                <option value="">Assign Manager</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">Notes</label>
            <textarea class="form-control" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="closeModal('newEventPlanModal')">Cancel</button>
        <button type="submit" form="newEventPlanForm" class="btn btn-primary">Create Plan</button>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="js/roles-config.js"></script>
  <script src="js/components.js"></script>
  <script src="js/internal.js"></script>
  <script>
    $(document).ready(async function() {
      await initializePage('Event Planning');
    });

    $('#newEventPlanForm').on('submit', function(e) {
      e.preventDefault();
      closeModal('newEventPlanModal');
      showSuccessToast('Event plan created successfully!');
    });
  </script>

</body>
</html>
